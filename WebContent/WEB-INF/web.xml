<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>TaskCity</display-name>

	<!-- Home page -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- 404 -->
	<error-page>
		<error-code>404</error-code>
		<location>/404.html</location>
	</error-page>

	<servlet>
		<servlet-name>404</servlet-name>
		<jsp-file>/404.html</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>404</servlet-name>
		<url-pattern>/404</url-pattern>
	</servlet-mapping>

	<!-- FAQs -->
	<servlet>
		<servlet-name>faqs</servlet-name>
		<jsp-file>/faqs.html</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>faqs</servlet-name>
		<url-pattern>/faqs</url-pattern>
	</servlet-mapping>

	<!-- Report -->
	<servlet>
		<servlet-name>report</servlet-name>
		<jsp-file>/report.html</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>report</servlet-name>
		<url-pattern>/report</url-pattern>
	</servlet-mapping>

	<!-- Login -->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.taskcity.servlet.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- Tasks -->
	<servlet>
		<servlet-name>tasks</servlet-name>
		<jsp-file>/tasks.jsp</jsp-file>
		<init-param>
			<param-name>compilerSourceVM</param-name>
			<param-value>1.8</param-value>
		</init-param>
		<init-param>
			<param-name>compilerTargetVM</param-name>
			<param-value>1.8</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>tasks</servlet-name>
		<url-pattern>/tasks</url-pattern>
	</servlet-mapping>

	<!-- Remove task -->
	<servlet>
		<servlet-name>removeTask</servlet-name>
		<servlet-class>com.taskcity.servlet.RemoveTaskServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>removeTask</servlet-name>
		<url-pattern>/removeTask</url-pattern>
	</servlet-mapping>
</web-app>
